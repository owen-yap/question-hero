      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav nav-right">
          <li class="nav-item navlink">
            <%= link_to "Sign Up", new_user_registration_path, class: "btn dark-btn mr-2" %>
