<div class="split-container">
  <div class="left-container">
    <div>
      <%= image_tag "question-hero-logo.png", class: "logo"%>
      <p>Make learning less frustrating and more rewarding. Accelerate your education today!</p>
    </div>
    <%= image_tag "helping.svg", class: "acc-img"%>
  </div>
  
  <div class="right-container">
    <%= link_to "< Back", root_path, class: "muted back-link" %>
    <div class="login-form">
      <h2 class="subheading mb-3"><strong>Log in</strong></h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn light-btn" %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>