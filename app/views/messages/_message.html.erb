<div class="message-container <%= message.user == message.question.user ? "msgwhite ml-auto" : "msggreen" %>" id="message-<%= message.id %>">
  <i class="author">
    <span><%= message.user.username %></span>
    <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
  </i>
  <p><%= message.content %></p>
</div>
